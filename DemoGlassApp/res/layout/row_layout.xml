<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/list_firstrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/list_number1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:shadowRadius="2"
            android:text="1. "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#0EBFE9"
            android:textSize="20sp"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toRightOf="@+id/list_number1" >

            <ImageView
                android:id="@+id/list_ride1_image"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/attraction_img1" />

            <TextView
                android:id="@+id/list_tag_item1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:layout_marginLeft="5dp"
                android:shadowRadius="2"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/list_tag_hyphen_item1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                
                android:shadowRadius="2"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/list_tag_no_of_tickets_item1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#cc3333"
                android:textSize="20sp"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/list_tag_direction_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:text="233232"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#bbbbbb"
            android:textSize="20sp" />

        <!-- <View -->
        <!-- android:layout_width="match_parent" -->
        <!-- android:layout_height="0.5dp" -->
        <!-- android:layout_below="@id/list_number1" -->
        <!-- android:layout_marginTop="2dp" -->
        <!-- android:background="#666666" > -->
        <!-- </View> -->
    </RelativeLayout>

</LinearLayout>